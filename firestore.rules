rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== USER DATA ====================
    // Users collection - each user can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ==================== ENOCH CALENDAR DATA ====================
    // Each user can read/write their own calendar data
    match /enochCalendar/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ==================== COMMUNITY / PUBLIC DATA ====================
    // Testimonials - users can create, but only read approved ones
    match /testimonials/{testimonialId} {
      allow read: if resource.data.approved == true;
      allow create: if request.auth != null;
      allow update, delete: if false; // Only admins through backend
    }

    // Support tickets - users can read/write their own tickets
    match /support_tickets/{ticketId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         request.auth.uid == request.resource.data.userId);
    }

    // ==================== ADMIN-ONLY COLLECTIONS ====================
    // Admin emails list - read only, no write access through client
    match /admin/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Set through Firebase Console only
    }
  }
}
